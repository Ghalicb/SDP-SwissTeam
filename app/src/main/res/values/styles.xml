<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarColor">@color/colorPrimaryDark</item>
        <item name="noNetwork">@color/no_network</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">?android:colorBackground</item>
        <item name="thumbs_up_grey">@drawable/thumbs_up</item>
        <item name="thumbs_down_grey">@drawable/thumbs_down</item>
        <item name="star_grey">@drawable/star_grey</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkMode" parent="Theme.AppCompat.NoActionBar" >
        <item name="statusBarColor">@color/DarkColorPrimaryDark</item>
        <item name="noNetwork">@color/no_network</item>
        <item name="backgroundColor">?android:colorBackground</item>
        <item name="thumbs_up_grey">@drawable/thumbs_up_white</item>
        <item name="thumbs_down_grey">@drawable/thumbs_down_white</item>
        <item name="star_grey">@drawable/star_white</item>
    </style>

</resources>
